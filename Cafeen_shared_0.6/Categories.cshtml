@{
    Layout = "_LayoutPage.cshtml";
    Page.Title = "Categories";
    
    var db = Database.Open("Cafeen");
    var data = db.Query("SELECT * FROM categories");
}

<div id="category-list">

<table id="table-category">
    <caption><span class="table-headline">Categories</span><input id="add-button-cat" type="button" value="Add Category" 
        name="AddButtonCat" onclick="window.location='AddCategory.cshtml'"/></caption>
    <thead>
        <tr>
            <th class="tablehead-style">Name</th>
            <th class="tablehead-style">Variations</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var row in data) {
        <tr>
            <td>@row.CatName</td>
            <td>@row.CatQuantity</td>
            <td><input id="edit-button-cat" type="button" name="EditButtonCat" value="Edit" 
                onclick="window.location='EditCategory?CatID=@row.CatID'"></td>
            <td><input id="delete-button-cat" type="button" name="DeleteButtonCat" value="Delete"
                    onclick="window.location='DeletePage?CatID=@row.CatID'"></td>
        </tr>
            }
        }
    </tbody>
</table>
    <div id="stock-list-number-wrapper">
        <section id="stock-list-number-left">
            <p>Showing 10 out of 57 entries</p>
        </section>
        <section id="stock-list-number-right">
        <ul>
            <li>Previous</li>
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>Next</li>
        </ul>
        </section>
    </div>
    <div>
    <input class="button-design" type="button" value="Go back" onclick="window.location='Stock.cshtml'" />
</div>

</div>